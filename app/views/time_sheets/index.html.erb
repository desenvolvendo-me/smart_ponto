<div class="container mx-auto px-4 py-6">
  <div class="mb-6">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
      <div class="flex items-center">
        <% if request.referer && request.referer != request.original_url %>
          <%= link_to :back, class: "text-2xl text-gray-700 hover:text-gray-900 mr-3" do %>
            <i class="fas fa-arrow-left"></i>
          <% end %>
        <% end %>
        <h1 class="text-2xl font-bold text-gray-800">Meu Ponto</h1>
      </div>

      <div>
        <%= button_to quick_register_time_entries_path(return_to: "list"), method: :post, class: "bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2.5 rounded-lg shadow-sm flex items-center transition duration-150 ease-in-out" do %>
          <i class="fas fa-plus mr-2"></i> Registrar Ponto
        <% end %>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
      <div class="flex space-x-2 bg-gray-100 p-1 rounded-lg">
        <%= link_to time_sheets_path, class: "px-4 py-2 rounded-md flex items-center #{current_page?(time_sheets_path) ? 'bg-white shadow-sm text-indigo-700 font-medium' : 'text-gray-700 hover:bg-gray-50'}" do %>
          <i class="fas fa-list mr-2"></i> Lista
        <% end %>

        <%= link_to calendar_time_sheets_path, class: "px-4 py-2 rounded-md flex items-center #{current_page?(calendar_time_sheets_path) ? 'bg-white shadow-sm text-indigo-700 font-medium' : 'text-gray-700 hover:bg-gray-50'}" do %>
          <i class="fas fa-calendar-alt mr-2"></i> Calendário
        <% end %>
      </div>

      <div>
        <%= link_to export_form_time_sheets_path, class: "inline-flex items-center px-4 py-2 bg-white border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition duration-150 ease-in-out shadow-sm" do %>
          <i class="fas fa-file-export mr-2"></i> Exportar
        <% end %>
      </div>
    </div>
  </div>

  <div class="space-y-6">
    <% @time_sheets.each do |time_sheet| %>
      <div class="bg-white p-5 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 border border-gray-100">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-4 gap-2">
          <div class="flex items-center">
            <div class="bg-indigo-100 p-2 rounded-full mr-3">
              <i class="fas fa-calendar-alt text-indigo-600"></i>
            </div>
            <div>
              <span class="text-lg font-semibold text-gray-800"><%= time_sheet.date.strftime("%d/%m/%Y") %></span>
              <% if time_sheet.date.today? %>
                <span class="ml-2 text-xs bg-indigo-100 text-indigo-800 px-1.5 py-0.5 rounded-full">Hoje</span>
              <% elsif (Date.today - time_sheet.date).to_i == 1 %>
                <span class="ml-2 text-xs bg-gray-100 text-gray-800 px-1.5 py-0.5 rounded-full">Ontem</span>
              <% end %>
            </div>
          </div>

          <div>
            <% status_bg, status_text, status_label = case time_sheet.approval_status 
              when 'aprovado' then ['bg-green-100', 'text-green-700', 'Aprovado']
              when 'enviado' then ['bg-blue-100', 'text-blue-700', 'Enviado para aprovação']
              when 'rejeitado' then ['bg-red-100', 'text-red-700', 'Rejeitado']
              else
                if time_sheet.status == 'completo'
                  ['bg-blue-100', 'text-blue-700', 'Completo']
                else
                  ['bg-yellow-100', 'text-yellow-700', 'Incompleto']
                end
              end
            %>
            <span class="<%= status_bg %> <%= status_text %> px-3 py-1.5 rounded-md inline-flex items-center font-medium text-sm">
              <% if time_sheet.approval_status == 'aprovado' %>
                <i class="fas fa-check-circle mr-1.5"></i>
              <% elsif time_sheet.approval_status == 'enviado' %>
                <i class="fas fa-paper-plane mr-1.5"></i>
              <% elsif time_sheet.approval_status == 'rejeitado' %>
                <i class="fas fa-times-circle mr-1.5"></i>
              <% elsif time_sheet.status == 'completo' %>
                <i class="fas fa-check mr-1.5"></i>
              <% else %>
                <i class="fas fa-exclamation-circle mr-1.5"></i>
              <% end %>
              <%= status_label %>
            </span>
          </div>
        </div>

        <% if time_sheet.time_entries.where(entry_type: "entrada").first&.observation.present? %>
          <div class="bg-gray-50 p-3 rounded-md mb-4 text-gray-600 text-sm border-l-4 border-indigo-300">
            <i class="fas fa-comment-alt text-indigo-400 mr-2"></i>
            <%= time_sheet.time_entries.where(entry_type: "entrada").first.observation %>
          </div>
        <% end %>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-5">
          <% entries = time_sheet.time_entries.order(:time) %>
          <% entries.each_with_index do |entry, index| %>
            <div class="bg-gray-50 p-4 rounded-lg text-center border border-gray-200 hover:border-indigo-200 transition-colors duration-200">
              <p class="text-sm text-gray-500 mb-1">
                <% if entry.entry_type == 'entrada' %>
                  <i class="fas fa-sign-in-alt text-green-500 mr-1"></i> Entrada
                <% else %>
                  <i class="fas fa-sign-out-alt text-red-500 mr-1"></i> Saída
                <% end %>
              </p>
              <p class="text-2xl font-bold text-gray-800"><%= entry.time.strftime("%H:%M") %></p>
              <% if entry.status == 'aprovado' %>
                <p class="text-green-600 text-xs mt-1 bg-green-50 py-1 px-2 rounded-full inline-flex items-center">
                  <i class="fas fa-check-circle mr-1"></i> Aprovado
                </p>
              <% else %>
                <p class="text-gray-500 text-xs mt-1 bg-gray-100 py-1 px-2 rounded-full inline-flex items-center">
                  <i class="fas fa-clock mr-1"></i> Registrado
                </p>
              <% end %>
            </div>
          <% end %>

          <% (4 - entries.size).times do %>
            <div class="bg-gray-50 p-4 rounded-lg text-center border border-gray-200 opacity-50">
              <p class="text-sm text-gray-400 mb-1">Pendente</p>
              <p class="text-2xl font-bold text-gray-300">--:--</p>
              <p class="text-gray-400 text-xs mt-1 bg-gray-100 py-1 px-2 rounded-full inline-flex items-center">
                <i class="fas fa-hourglass-half mr-1"></i> Aguardando
              </p>
            </div>
          <% end %>
        </div>

        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3 pt-3 border-t border-gray-100">
          <div class="font-medium text-gray-800">
            <% hours = time_sheet.total_hours.to_f rescue 0 %>
            <% difference_minutes = ((hours - 8.0).abs * 60).round %>

            <div class="flex items-center">
              <i class="fas fa-clock text-indigo-500 mr-2"></i>
              <% if time_sheet.within_tolerance? %>
                <span class="text-green-600 font-medium">
                  Total: <%= time_sheet.total_hours %>h
                  <span class="ml-2 text-xs bg-green-100 text-green-700 px-2 py-0.5 rounded-full">Tolerância OK</span>
                </span>
              <% else %>
                <span class="text-orange-600 font-medium">
                  Total: <%= time_sheet.total_hours %>h
                  <span class="ml-2 text-xs bg-yellow-100 text-yellow-700 px-2 py-0.5 rounded-full">Diferença: <%= difference_minutes %>min</span>
                </span>
              <% end %>
            </div>

            <% if time_sheet.justification.present? %>
              <div class="mt-2">
                <% case time_sheet.justification_status %>
                <% when 'aprovada' %>
                  <span class="bg-green-100 text-green-700 px-2 py-1 rounded-md text-xs inline-flex items-center">
                    <i class="fas fa-check-circle mr-1"></i> Justificativa aprovada
                  </span>
                <% when 'rejeitada' %>
                  <span class="bg-red-100 text-red-700 px-2 py-1 rounded-md text-xs inline-flex items-center">
                    <i class="fas fa-times-circle mr-1"></i> Justificativa rejeitada
                  </span>
                <% when 'pendente' %>
                  <span class="bg-yellow-100 text-yellow-700 px-2 py-1 rounded-md text-xs inline-flex items-center">
                    <i class="fas fa-clock mr-1"></i> Justificativa pendente
                  </span>
                <% end %>
              </div>
            <% end %>
          </div>

          <div class="flex items-center space-x-2">
            <% if time_sheet.signature? %>
              <span class="text-green-600 bg-green-50 px-2 py-1 rounded-md text-sm inline-flex items-center">
                <i class="fas fa-signature mr-1.5"></i> Assinado digitalmente
              </span>
            <% end %>

            <% if time_sheet.status == 'completo' && time_sheet.approval_status != 'aprovado' %>
              <div class="flex flex-wrap gap-2">
                <% if time_sheet.justification.present? %>
                  <!-- Link para ver os detalhes da justificativa -->
                  <%= link_to time_sheet_path(time_sheet), class: "text-indigo-600 bg-indigo-50 hover:bg-indigo-100 px-3 py-1.5 rounded-md text-sm transition-colors duration-150 inline-flex items-center" do %>
                    <i class="fas fa-eye mr-1.5"></i> Ver justificativa
                  <% end %>
                <% else %>
                  <!-- Link para adicionar justificativa -->
                  <%= link_to time_sheet_path(time_sheet), class: "bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1.5 rounded-md text-sm transition-colors duration-150 inline-flex items-center" do %>
                    <i class="fas fa-plus-circle mr-1.5"></i> Adicionar justificativa
                  <% end %>
                <% end %>

                <%= button_to submit_for_approval_time_sheet_path(time_sheet, return_to: "list"), method: :post, class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-1.5 rounded-md text-sm transition-colors duration-150 inline-flex items-center" do %>
                  <i class="fas fa-paper-plane mr-1.5"></i> Enviar para aprovação
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="my-6">
    <%= paginate @time_sheets %>
  </div>
</div>
