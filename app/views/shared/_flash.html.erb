<!-- app/views/shared/_flash.html.erb -->
<% flash.each do |type, message| %>
  <% alert_class = case type.to_sym
                   when :notice then "bg-green-100 border-green-500 text-green-700"
                   when :alert, :error then "bg-red-100 border-red-500 text-red-700"
                   else "bg-blue-100 border-blue-500 text-blue-700"
                   end %>
  <div class="<%= alert_class %> px-4 py-3 rounded relative mb-4 border-l-4" role="alert" data-controller="flash">
    <span class="block sm:inline"><%= message %></span>
    <button class="absolute top-0 bottom-0 right-0 px-4 py-3" data-action="click->flash#dismiss">
      <span class="text-xl">&times;</span>
    </button>
  </div>
<% end %>