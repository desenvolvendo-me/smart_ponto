<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Smart Ponto - Login</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<body class="bg-gray-100">
  <% if notice %>
    <div class="fixed top-4 right-4 z-50">
      <div class="bg-green-50 p-4 rounded-lg shadow-lg border-l-4 border-green-400">
        <div class="flex">
          <div class="flex-shrink-0">
            <i class="fas fa-check-circle text-green-400"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm text-green-800"><%= notice %></p>
          </div>
          <div class="ml-auto pl-3">
            <div class="-mx-1.5 -my-1.5">
              <button class="inline-flex text-green-500 hover:text-green-600 focus:outline-none" onclick="this.parentElement.parentElement.parentElement.parentElement.remove()">
                <span class="sr-only">Fechar</span>
                <i class="fas fa-times"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if alert %>
    <div class="fixed top-4 right-4 z-50">
      <div class="bg-red-50 p-4 rounded-lg shadow-lg border-l-4 border-red-400">
        <div class="flex">
          <div class="flex-shrink-0">
            <i class="fas fa-exclamation-circle text-red-400"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm text-red-800"><%= alert %></p>
          </div>
          <div class="ml-auto pl-3">
            <div class="-mx-1.5 -my-1.5">
              <button class="inline-flex text-red-500 hover:text-red-600 focus:outline-none" onclick="this.parentElement.parentElement.parentElement.parentElement.remove()">
                <span class="sr-only">Fechar</span>
                <i class="fas fa-times"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%= yield %>
</body>
</html>