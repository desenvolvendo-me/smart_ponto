<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Smart Ponto</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<body class="bg-gray-100">
<div class="flex h-screen overflow-hidden">
  <!-- Sidebar para desktop -->
  <div class="hidden md:flex md:flex-shrink-0">
    <div class="flex flex-col w-64 bg-gray-800">
      <!-- Logo e título -->
      <div class="flex items-center h-16 px-4 bg-gray-900">
        <span class="text-xl text-white font-bold">Smart Ponto</span>
      </div>
      <!-- Menu de navegação -->
      <div class="flex flex-col flex-grow px-4 py-4">
        <nav class="flex-1 space-y-2">
          <% if user_signed_in? %>
            <%= link_to time_sheets_path, class: "flex items-center px-2 py-2 text-gray-300 rounded-md hover:bg-gray-700 hover:text-white" do %>
              <i class="fas fa-clock w-6 mr-3"></i>
              <span>Meu Ponto</span>
            <% end %>
            <%= link_to calendar_time_sheets_path, class: "flex items-center px-2 py-2 text-gray-300 rounded-md hover:bg-gray-700 hover:text-white" do %>
              <i class="fas fa-calendar-alt w-6 mr-3"></i>
              <span>Calendário</span>
            <% end %>
            <%= link_to export_form_time_sheets_path, class: "flex items-center px-2 py-2 text-gray-300 rounded-md hover:bg-gray-700 hover:text-white" do %>
              <i class="fas fa-file-export w-6 mr-3"></i>
              <span>Exportar Registros</span>
            <% end %>
            <% if current_user.role == 'admin' || current_user.role == 'manager' %>
              <div class="pt-3 mt-3 border-t border-gray-700">
                <h3 class="px-2 text-xs text-gray-500 uppercase tracking-wider">Administração</h3>
              </div>
              <%= link_to "#", class: "flex items-center px-2 py-2 text-gray-300 rounded-md hover:bg-gray-700 hover:text-white" do %>
                <i class="fas fa-users w-6 mr-3"></i>
                <span>Usuários</span>
              <% end %>
              <%= link_to "#", class: "flex items-center px-2 py-2 text-gray-300 rounded-md hover:bg-gray-700 hover:text-white" do %>
                <i class="fas fa-clipboard-check w-6 mr-3"></i>
                <span>Aprovações</span>
              <% end %>
            <% end %>
          <% end %>
        </nav>

        <% if user_signed_in? %>
          <div class="pt-4 pb-2 border-t border-gray-700">
            <div class="flex items-center px-2 py-2">
              <div class="flex-shrink-0">
                <i class="fas fa-user-circle text-2xl text-gray-400"></i>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-white"><%= current_user.name %></p>
                <p class="text-xs text-gray-400"><%= current_user.email %></p>
              </div>
            </div>
            <div class="mt-2">
              <%= button_to destroy_user_session_path, method: :delete, class: "flex items-center justify-center w-full px-4 py-2 text-sm text-white bg-gray-700 hover:bg-gray-600 rounded-md" do %>
                <i class="fas fa-sign-out-alt mr-2"></i>
                <span>Sair</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Conteúdo principal -->
  <div class="flex flex-col flex-1 w-0 overflow-hidden">
    <!-- Barra superior móvel -->
    <div class="md:hidden bg-gray-800 text-white p-4 flex items-center justify-between">
      <span class="text-xl font-bold">Smart Ponto</span>
      <button id="mobile-menu-button" class="text-white focus:outline-none">
        <i class="fas fa-bars"></i>
      </button>
    </div>

    <!-- Conteúdo principal -->
    <main class="flex-1 relative overflow-y-auto focus:outline-none p-4">
      <%= render 'shared/flash' %>
      <%= yield %>
    </main>
  </div>

  <!-- Menu lateral móvel (oculto por padrão) -->
  <div id="mobile-menu" class="fixed inset-0 flex z-40 md:hidden hidden">
    <div class="fixed inset-0 bg-gray-600 bg-opacity-75" aria-hidden="true" id="mobile-backdrop"></div>
    <div class="relative flex-1 flex flex-col max-w-xs w-full bg-gray-800">
      <div class="absolute top-0 right-0 -mr-12 pt-2">
        <button id="close-mobile-menu" class="ml-1 flex items-center justify-center h-10 w-10 rounded-full focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
          <span class="sr-only">Fechar menu</span>
          <i class="fas fa-times text-white"></i>
        </button>
      </div>

      <!-- Conteúdo do menu móvel -->
      <div class="flex items-center h-16 px-4 bg-gray-900">
        <span class="text-xl text-white font-bold">Smart Ponto</span>
      </div>
      <div class="flex-1 h-0 overflow-y-auto">
        <nav class="px-2 py-4 space-y-1">
          <% if user_signed_in? %>
            <%= link_to time_sheets_path, class: "flex items-center px-2 py-2 text-gray-300 rounded-md hover:bg-gray-700 hover:text-white" do %>
              <i class="fas fa-clock w-6 mr-3"></i>
              <span>Meu Ponto</span>
            <% end %>
            <%= link_to calendar_time_sheets_path, class: "flex items-center px-2 py-2 text-gray-300 rounded-md hover:bg-gray-700 hover:text-white" do %>
              <i class="fas fa-calendar-alt w-6 mr-3"></i>
              <span>Calendário</span>
            <% end %>
            <%= link_to export_form_time_sheets_path, class: "flex items-center px-2 py-2 text-gray-300 rounded-md hover:bg-gray-700 hover:text-white" do %>
              <i class="fas fa-file-export w-6 mr-3"></i>
              <span>Exportar Registros</span>
            <% end %>
            <% if current_user.role == 'admin' || current_user.role == 'manager' %>
              <div class="pt-3 mt-3 border-t border-gray-700">
                <h3 class="px-2 text-xs text-gray-500 uppercase tracking-wider">Administração</h3>
              </div>
              <%= link_to "#", class: "flex items-center px-2 py-2 text-gray-300 rounded-md hover:bg-gray-700 hover:text-white" do %>
                <i class="fas fa-users w-6 mr-3"></i>
                <span>Usuários</span>
              <% end %>
              <%= link_to "#", class: "flex items-center px-2 py-2 text-gray-300 rounded-md hover:bg-gray-700 hover:text-white" do %>
                <i class="fas fa-clipboard-check w-6 mr-3"></i>
                <span>Aprovações</span>
              <% end %>
            <% end %>
          <% end %>
        </nav>

        <% if user_signed_in? %>
          <div class="px-2 pt-4 pb-2 border-t border-gray-700">
            <div class="flex items-center px-2 py-2">
              <div class="flex-shrink-0">
                <i class="fas fa-user-circle text-2xl text-gray-400"></i>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-white"><%= current_user.name %></p>
                <p class="text-xs text-gray-400"><%= current_user.email %></p>
              </div>
            </div>
            <div class="mt-2">
              <%= button_to destroy_user_session_path, method: :delete, class: "flex items-center justify-center w-full px-4 py-2 text-sm text-white bg-gray-700 hover:bg-gray-600 rounded-md" do %>
                <i class="fas fa-sign-out-alt mr-2"></i>
                <span>Sair</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript para controle do menu móvel -->
<script>
    document.addEventListener('turbo:load', function() {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const closeMobileMenu = document.getElementById('close-mobile-menu');
        const mobileBackdrop = document.getElementById('mobile-backdrop');

        if (mobileMenuButton) {
            mobileMenuButton.addEventListener('click', function() {
                mobileMenu.classList.remove('hidden');
            });
        }

        if (closeMobileMenu) {
            closeMobileMenu.addEventListener('click', function() {
                mobileMenu.classList.add('hidden');
            });
        }

        if (mobileBackdrop) {
            mobileBackdrop.addEventListener('click', function() {
                mobileMenu.classList.add('hidden');
            });
        }
    });
</script>
</body>
</html>