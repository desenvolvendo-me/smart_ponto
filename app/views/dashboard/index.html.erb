<div class="max-w-7xl mx-auto">
  <!-- Cabeçalho -->
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
  </div>

  <!-- Grid com Cards de Resumo -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Card Principal - Horas Trabalhadas Hoje -->
    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="text-center">
        <h2 class="text-sm font-medium text-gray-600 mb-2">Horas Trabalhadas (Hoje)</h2>

        <!-- Valor Principal -->
        <div class="text-3xl font-bold text-gray-900 mb-2">
          <%= format_hours_minutes(@daily_summary[:worked_hours]) %>
        </div>

        <!-- Meta -->
        <div class="text-sm text-gray-500 mb-4">
          Meta: <%= number_with_precision(@daily_summary[:daily_goal], precision: 0) %>h 00min
        </div>

        <!-- Status Badge -->
        <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                    <%= @daily_summary[:status] == 'complete' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
          <%= @daily_summary[:status] == 'complete' ? 'Completo' : 'Incompleto' %>
        </div>

        <!-- Informação adicional baseada no approval_status real -->
        <% case @daily_summary[:approval_status] %>
        <% when 'aprovado' %>
          <div class="mt-2 text-xs text-green-600">
            <i class="fas fa-check-circle mr-1"></i>
            Ponto aprovado
          </div>
        <% when 'enviado' %>
          <div class="mt-2 text-xs text-blue-600">
            <i class="fas fa-paper-plane mr-1"></i>
            Ponto enviado para aprovação
          </div>
        <% when 'rejeitado' %>
          <div class="mt-2 text-xs text-red-600">
            <i class="fas fa-times-circle mr-1"></i>
            Ponto rejeitado
          </div>
        <% when 'pendente' %>
          <div class="mt-2 text-xs text-gray-600">
            <i class="fas fa-edit mr-1"></i>
            Ponto em rascunho
          </div>
        <% end %>
      </div>
    </div>

    <!-- Novo Card - Desempenho Semanal -->
    <div class="bg-white rounded-lg shadow-sm border p-6">
      <div class="text-center">
        <h2 class="text-sm font-medium text-gray-600 mb-2">Desempenho Semanal</h2>

        <!-- Valor Principal -->
        <div class="text-3xl font-bold text-gray-900 mb-2">
          <%= format_hours_minutes(@weekly_summary[:worked_hours]) %>
        </div>

        <!-- Meta e Progresso -->
        <div class="text-sm text-gray-500 mb-3">
          Meta: <%= number_with_precision(@weekly_summary[:weekly_goal], precision: 0) %>h
        </div>

        <!-- Barra de Progresso -->
        <div class="w-full bg-gray-200 rounded-full h-2 mb-4">
          <div class="bg-blue-600 h-2 rounded-full transition-all duration-300"
               style="width: <%= [@weekly_summary[:completion_percentage], 100].min %>%"></div>
        </div>

        <!-- Percentual -->
        <div class="text-sm font-medium text-gray-700 mb-3">
          <%= @weekly_summary[:completion_percentage] %>% da meta semanal
        </div>

        <!-- Status Badge -->
        <% case @weekly_summary[:status] %>
        <% when 'complete' %>
          <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
            <i class="fas fa-check-circle mr-1"></i>
            Meta Atingida
          </div>
        <% when 'on_track' %>
          <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
            <i class="fas fa-chart-line mr-1"></i>
            No Caminho Certo
          </div>
        <% else %>
          <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
            <i class="fas fa-exclamation-triangle mr-1"></i>
            Atrás da Meta
          </div>
        <% end %>

        <!-- Informações Adicionais -->
        <div class="mt-3 text-xs text-gray-500">
          <%= @weekly_summary[:days_worked] %> dias trabalhados esta semana
        </div>
        <div class="text-xs text-gray-500">
          <%= @weekly_summary[:start_date].strftime("%d/%m") %> - <%= @weekly_summary[:end_date].strftime("%d/%m") %>
        </div>
      </div>
    </div>
  </div>

  <!-- Registros de Hoje (se houver) -->
  <% if @daily_summary[:entries].any? %>
    <div class="bg-white rounded-lg shadow-sm border p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Registros de Hoje</h3>

      <div class="space-y-3">
        <% @daily_summary[:entries].each do |entry| %>
          <div class="flex items-center justify-between py-3 px-4 bg-gray-50 rounded-lg">
            <div class="flex items-center">
              <div class="text-sm font-medium text-gray-900">
                <%= format_entry_type(entry.entry_type) %>
              </div>
            </div>
            <div class="text-sm font-medium text-gray-900">
              <%= entry.time.strftime("%H:%M") %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- Estado sem registros -->
    <div class="bg-white rounded-lg shadow-sm border p-8 text-center">
      <div class="text-gray-400 mb-4">
        <i class="fas fa-clock text-4xl"></i>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">Nenhum registro hoje</h3>
      <p class="text-gray-600 mb-4">Faça seu primeiro registro de ponto para começar a acompanhar seu dia.</p>
      <%= link_to time_sheets_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors" do %>
        <i class="fas fa-plus mr-2"></i>
        Registrar Ponto
      <% end %>
    </div>
  <% end %>

  <!-- Registros Recentes -->
  <div class="mt-8">
    <h2 class="text-xl font-bold text-gray-900 mb-4">Registros Recentes</h2>

    <% if @recent_time_sheets.any? %>
      <div class="space-y-4">
        <% @recent_time_sheets.each do |time_sheet| %>
          <div class="bg-white rounded-lg shadow-sm border p-4">
            <div class="flex justify-between items-center">
              <div class="flex items-center space-x-2">
                <i class="fas fa-calendar-alt text-gray-500"></i>
                <span class="text-lg font-semibold"><%= time_sheet.date.strftime("%d/%m/%Y") %></span>
              </div>

              <% if time_sheet.approval_status == 'aprovado' %>
                <span class="bg-green-100 text-green-700 px-2 py-1 rounded">Aprovado</span>
              <% elsif time_sheet.approval_status == 'enviado' %>
                <span class="bg-blue-100 text-blue-700 px-2 py-1 rounded">Enviado para aprovação</span>
              <% elsif time_sheet.status == 'completo' %>
                <span class="bg-blue-100 text-blue-700 px-2 py-1 rounded">Completo</span>
              <% else %>
                <span class="bg-yellow-100 text-yellow-700 px-2 py-1 rounded">Incompleto</span>
              <% end %>
            </div>

            <div class="mt-3 flex justify-between items-center">
              <div class="font-medium text-gray-800">
                <% hours = time_sheet.total_hours.to_f rescue 0 %>
                Total: <%= time_sheet.total_hours %>h

                <% if time_sheet.justification.present? %>
                  <% case time_sheet.justification_status %>
                  <% when 'aprovada' %>
                    <span class="ml-2 bg-green-100 text-green-700 px-2 py-1 rounded text-xs">Justificado</span>
                  <% when 'rejeitada' %>
                    <span class="ml-2 bg-red-100 text-red-700 px-2 py-1 rounded text-xs">Justificativa rejeitada</span>
                  <% when 'pendente' %>
                    <span class="ml-2 bg-yellow-100 text-yellow-700 px-2 py-1 rounded text-xs">Justificativa pendente</span>
                  <% end %>
                <% end %>
              </div>

              <% unless time_sheet.approval_status == 'aprovado' %>
                <%= link_to time_sheet_path(time_sheet), class: "bg-gray-200 text-gray-700 px-3 py-1 rounded text-sm hover:bg-gray-300 transition-colors" do %>
                  <i class="fas fa-edit mr-1"></i> Editar
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-4 text-center">
        <%= link_to time_sheets_path, class: "text-blue-600 hover:text-blue-800 font-medium" do %>
          Ver todos os registros <i class="fas fa-arrow-right ml-1"></i>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-sm border p-6 text-center">
        <p class="text-gray-600">Nenhum registro encontrado.</p>
      </div>
    <% end %>
  </div>
</div>
