<!-- app/views/approvals/index.html.erb -->
<div class="container mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-8">
    <div class="flex items-center">
      <%= link_to time_sheets_path, class: "mr-4 text-gray-600 hover:text-gray-900 transition-colors duration-150" do %>
        <i class="fas fa-arrow-left text-lg"></i>
      <% end %>
      <h1 class="text-2xl font-bold text-gray-900">Aprovações</h1>
    </div>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-8">
    <div class="bg-gray-50 p-6 border-b border-gray-200">
      <%= form_with url: approvals_path, method: :get, class: "flex flex-col md:flex-row md:items-end space-y-4 md:space-y-0 md:space-x-4" do |f| %>
        <div class="flex-grow">
          <label for="search" class="block text-sm font-medium text-gray-700 mb-1">Buscar por nome ou justificativa</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <i class="fas fa-search text-gray-400"></i>
            </div>
            <%= f.text_field :search, value: params[:search], id: "search", class: "bg-white border border-gray-300 text-gray-900 text-sm rounded-lg block w-full pl-10 p-2.5 shadow-sm focus:ring-blue-500 focus:border-blue-500", placeholder: "Digite um termo para buscar..." %>
          </div>
        </div>

        <div class="w-full md:w-64">
          <label for="position" class="block text-sm font-medium text-gray-700 mb-1">Filtrar por função</label>
          <%= f.select :position, 
                      options_for_select([['Todas as funções', '']] + @positions.map { |p| [p, p] }, params[:position]), 
                      {}, 
                      { id: "position", class: "bg-white border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 shadow-sm focus:ring-blue-500 focus:border-blue-500" } %>
        </div>

        <div>
          <%= f.submit "Aplicar Filtros", class: "w-full md:w-auto bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg text-sm px-5 py-2.5 shadow-sm transition-colors duration-150 flex items-center justify-center" do %>
            <i class="fas fa-filter mr-2"></i> Aplicar Filtros
          <% end %>
        </div>

        <%= f.hidden_field :tab, value: params[:tab] if params[:tab].present? %>
      <% end %>
    </div>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden" data-controller="tabs">
    <!-- Tabs de navegação -->
    <div class="flex border-b">
      <%= link_to "#",
                  data: { tab: "pending", action: "click->tabs#switch", tabs_target: "tab" },
                  class: "flex-1 md:flex-none px-6 py-4 text-center text-sm font-medium transition-colors duration-150 #{params[:tab] != 'history' ? 'border-b-2 border-blue-600 text-blue-700 bg-blue-50' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}" do %>
        <div class="flex items-center justify-center">
          <i class="fas fa-clock mr-2"></i>
          <span>Pendentes</span>
          <span class="ml-2 bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full"><%= @pending_count %></span>
        </div>
      <% end %>

      <%= link_to "#",
                  data: { tab: "history", action: "click->tabs#switch", tabs_target: "tab" },
                  class: "flex-1 md:flex-none px-6 py-4 text-center text-sm font-medium transition-colors duration-150 #{params[:tab] == 'history' ? 'border-b-2 border-blue-600 text-blue-700 bg-blue-50' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}" do %>
        <div class="flex items-center justify-center">
          <i class="fas fa-history mr-2"></i>
          <span>Histórico</span>
        </div>
      <% end %>
    </div>

    <!-- Conteúdo da tab Pendentes -->
    <div data-tabs-target="content" data-tab="pending" class="<%= params[:tab] == 'history' ? 'hidden' : '' %>">
      <% if @pending_sheets.empty? %>
        <div class="p-12 text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-yellow-100 text-yellow-500 mb-4">
            <i class="fas fa-inbox text-2xl"></i>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">Nenhuma solicitação pendente</h3>
          <p class="text-gray-500 max-w-md mx-auto">
            Todas as solicitações foram processadas. Novas solicitações aparecerão aqui quando forem enviadas.
          </p>
        </div>
      <% else %>
        <div class="divide-y divide-gray-200">
          <% @pending_sheets.each do |time_sheet| %>
            <%= render 'approval_item', time_sheet: time_sheet %>
          <% end %>
        </div>

        <% if @pending_sheets.total_pages > 1 %>
          <div class="mt-6 px-6 pb-6 flex items-center justify-between border-t border-gray-200 pt-6">
            <div class="text-sm text-gray-500">
              Mostrando <span class="font-medium"><%= @pending_sheets.offset_value + 1 %></span> a 
              <span class="font-medium"><%= [@pending_sheets.offset_value + @pending_sheets.limit_value, @pending_sheets.total_count].min %></span> 
              de <span class="font-medium"><%= @pending_sheets.total_count %></span> solicitações
            </div>
            <div class="pagination-container">
              <%= paginate @pending_sheets, param_name: 'pending_page', class: "pagination" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Conteúdo da tab Histórico -->
    <div data-tabs-target="content" data-tab="history" class="<%= params[:tab] != 'history' ? 'hidden' : '' %>">
      <% if @history_sheets.empty? %>
        <div class="p-12 text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-blue-100 text-blue-500 mb-4">
            <i class="fas fa-history text-2xl"></i>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">Histórico vazio</h3>
          <p class="text-gray-500 max-w-md mx-auto">
            Nenhuma solicitação foi aprovada ou rejeitada ainda. O histórico de aprovações aparecerá aqui.
          </p>
        </div>
      <% else %>
        <div class="divide-y divide-gray-200">
          <% @history_sheets.each do |time_sheet| %>
            <%= render 'approval_item', time_sheet: time_sheet %>
          <% end %>
        </div>

        <% if @history_sheets.total_pages > 1 %>
          <div class="mt-6 px-6 pb-6 flex items-center justify-between border-t border-gray-200 pt-6">
            <div class="text-sm text-gray-500">
              Mostrando <span class="font-medium"><%= @history_sheets.offset_value + 1 %></span> a 
              <span class="font-medium"><%= [@history_sheets.offset_value + @history_sheets.limit_value, @history_sheets.total_count].min %></span> 
              de <span class="font-medium"><%= @history_sheets.total_count %></span> solicitações
            </div>
            <div class="pagination-container">
              <%= paginate @history_sheets, param_name: 'history_page', class: "pagination" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<% content_for :styles do %>
<style>
  .pagination {
    @apply inline-flex items-center -space-x-px;
  }

  .pagination span.page, .pagination span.next, .pagination span.prev, .pagination span.first, .pagination span.last {
    @apply relative inline-flex items-center px-4 py-2 text-sm font-medium;
  }

  .pagination span.page.current {
    @apply z-10 bg-blue-50 border-blue-500 text-blue-600 relative inline-flex items-center px-4 py-2 border text-sm font-medium;
  }

  .pagination span.page a, .pagination span.next a, .pagination span.prev a, .pagination span.first a, .pagination span.last a {
    @apply bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium;
  }

  .pagination .gap {
    @apply bg-white border-gray-300 text-gray-700 relative inline-flex items-center px-4 py-2 border text-sm font-medium;
  }
</style>
<% end %>
