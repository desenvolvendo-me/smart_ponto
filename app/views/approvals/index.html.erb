<!-- app/views/approvals/index.html.erb -->
<div class="container mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center">
      <%= link_to time_sheets_path, class: "mr-4 text-gray-600 hover:text-indigo-600 transition-colors duration-150 flex items-center" do %>
        <i class="fas fa-arrow-left text-lg"></i>
        <span class="ml-2 hidden sm:inline text-sm font-medium">Voltar</span>
      <% end %>
      <h1 class="text-2xl font-bold text-gray-900">Aprovações</h1>
    </div>

    <div class="text-sm text-gray-500 hidden md:block">
      <span class="bg-indigo-100 text-indigo-800 px-2.5 py-1 rounded-md font-medium">
        <i class="fas fa-clipboard-check mr-1"></i>
        Total pendente: <%= @pending_count %>
      </span>
    </div>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-indigo-50 to-white p-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-800 mb-3">
        <i class="fas fa-filter text-indigo-600 mr-2"></i>
        Filtros
      </h2>
      <%= form_with url: approvals_path, method: :get, class: "flex flex-col lg:flex-row lg:items-end space-y-4 lg:space-y-0 lg:space-x-4" do |f| %>
        <div class="flex-grow">
          <label for="search" class="block text-sm font-medium text-gray-700 mb-1">Buscar por nome ou justificativa</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <i class="fas fa-search text-gray-400"></i>
            </div>
            <%= f.text_field :search, value: params[:search], id: "search", class: "bg-white border border-gray-300 text-gray-900 text-sm rounded-lg block w-full pl-10 p-2.5 shadow-sm focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Digite um termo para buscar..." %>
          </div>
        </div>

        <div class="w-full lg:w-64">
          <label for="position" class="block text-sm font-medium text-gray-700 mb-1">Filtrar por função</label>
          <%= f.select :position, 
                      options_for_select([['Todas as funções', '']] + @positions.map { |p| [p, p] }, params[:position]), 
                      {}, 
                      { id: "position", class: "bg-white border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" } %>
        </div>

        <div class="flex space-x-2">
          <% if params[:search].present? || params[:position].present? %>
            <%= link_to approvals_path(tab: params[:tab]), class: "w-full lg:w-auto bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium rounded-lg text-sm px-4 py-2.5 shadow-sm transition-colors duration-150 flex items-center justify-center" do %>
              <i class="fas fa-times mr-2"></i> Limpar
            <% end %>
          <% end %>

          <%= button_tag type: 'submit', class: "w-full lg:w-auto bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg text-sm px-5 py-2.5 shadow-sm transition-colors duration-150 flex items-center justify-center" do %>
            <i class="fas fa-filter mr-2"></i> Aplicar Filtros
          <% end %>
        </div>

        <%= f.hidden_field :tab, value: params[:tab] if params[:tab].present? %>
      <% end %>
    </div>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden" data-controller="tabs">
    <!-- Tabs de navegação -->
    <div class="flex border-b">
      <%= link_to "#",
                  data: { tab: "pending", action: "click->tabs#switch", tabs_target: "tab" },
                  class: "flex-1 md:flex-none px-6 py-4 text-center text-sm font-medium transition-colors duration-150 #{params[:tab] != 'history' ? 'border-b-2 border-indigo-600 text-indigo-700 bg-indigo-50' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}" do %>
        <div class="flex items-center justify-center">
          <i class="fas fa-clock mr-2"></i>
          <span>Pendentes</span>
          <span class="ml-2 bg-indigo-100 text-indigo-800 text-xs font-medium px-2.5 py-0.5 rounded-full"><%= @pending_count %></span>
        </div>
      <% end %>

      <%= link_to "#",
                  data: { tab: "history", action: "click->tabs#switch", tabs_target: "tab" },
                  class: "flex-1 md:flex-none px-6 py-4 text-center text-sm font-medium transition-colors duration-150 #{params[:tab] == 'history' ? 'border-b-2 border-indigo-600 text-indigo-700 bg-indigo-50' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}" do %>
        <div class="flex items-center justify-center">
          <i class="fas fa-history mr-2"></i>
          <span>Histórico</span>
        </div>
      <% end %>
    </div>

    <!-- Conteúdo da tab Pendentes -->
    <div data-tabs-target="content" data-tab="pending" class="<%= params[:tab] == 'history' ? 'hidden' : '' %>">
      <% if @pending_sheets.empty? %>
        <div class="p-12 text-center">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-amber-100 text-amber-500 mb-6 shadow-inner">
            <i class="fas fa-inbox text-3xl"></i>
          </div>
          <h3 class="text-xl font-medium text-gray-900 mb-3">Nenhuma solicitação pendente</h3>
          <p class="text-gray-500 max-w-md mx-auto text-sm">
            Todas as solicitações foram processadas. Novas solicitações aparecerão aqui quando forem enviadas.
          </p>
          <div class="mt-6">
            <a href="javascript:window.location.reload()" class="inline-flex items-center px-4 py-2 bg-indigo-50 text-indigo-700 hover:bg-indigo-100 rounded-lg text-sm font-medium transition-colors duration-150">
              <i class="fas fa-sync-alt mr-2"></i> Atualizar página
            </a>
          </div>
        </div>
      <% else %>
        <div class="divide-y divide-gray-200">
          <% @pending_sheets.each do |time_sheet| %>
            <%= render 'approval_item', time_sheet: time_sheet %>
          <% end %>
        </div>

        <% if @pending_sheets.total_pages > 1 %>
          <div class="mt-6 px-6 pb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 border-t border-gray-200 pt-6">
            <div class="text-sm text-gray-500 bg-gray-50 px-3 py-2 rounded-md">
              Mostrando <span class="font-medium text-indigo-700"><%= @pending_sheets.offset_value + 1 %></span> a 
              <span class="font-medium text-indigo-700"><%= [@pending_sheets.offset_value + @pending_sheets.limit_value, @pending_sheets.total_count].min %></span> 
              de <span class="font-medium text-indigo-700"><%= @pending_sheets.total_count %></span> solicitações
            </div>
            <div class="pagination-container self-center sm:self-auto">
              <%= paginate @pending_sheets, param_name: 'pending_page', class: "pagination" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Conteúdo da tab Histórico -->
    <div data-tabs-target="content" data-tab="history" class="<%= params[:tab] != 'history' ? 'hidden' : '' %>">
      <% if @history_sheets.empty? %>
        <div class="p-12 text-center">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-indigo-100 text-indigo-500 mb-6 shadow-inner">
            <i class="fas fa-history text-3xl"></i>
          </div>
          <h3 class="text-xl font-medium text-gray-900 mb-3">Histórico vazio</h3>
          <p class="text-gray-500 max-w-md mx-auto text-sm">
            Nenhuma solicitação foi aprovada ou rejeitada ainda. O histórico de aprovações aparecerá aqui.
          </p>
          <div class="mt-6">
            <a href="javascript:window.location.reload()" class="inline-flex items-center px-4 py-2 bg-indigo-50 text-indigo-700 hover:bg-indigo-100 rounded-lg text-sm font-medium transition-colors duration-150">
              <i class="fas fa-sync-alt mr-2"></i> Atualizar página
            </a>
          </div>
        </div>
      <% else %>
        <div class="divide-y divide-gray-200">
          <% @history_sheets.each do |time_sheet| %>
            <%= render 'approval_item', time_sheet: time_sheet %>
          <% end %>
        </div>

        <% if @history_sheets.total_pages > 1 %>
          <div class="mt-6 px-6 pb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 border-t border-gray-200 pt-6">
            <div class="text-sm text-gray-500 bg-gray-50 px-3 py-2 rounded-md">
              Mostrando <span class="font-medium text-indigo-700"><%= @history_sheets.offset_value + 1 %></span> a 
              <span class="font-medium text-indigo-700"><%= [@history_sheets.offset_value + @history_sheets.limit_value, @history_sheets.total_count].min %></span> 
              de <span class="font-medium text-indigo-700"><%= @history_sheets.total_count %></span> solicitações
            </div>
            <div class="pagination-container self-center sm:self-auto">
              <%= paginate @history_sheets, param_name: 'history_page', class: "pagination" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<% content_for :styles do %>
<style>
  .pagination {
    @apply inline-flex items-center -space-x-px rounded-md shadow-sm overflow-hidden;
  }

  .pagination span.page, .pagination span.next, .pagination span.prev, .pagination span.first, .pagination span.last {
    @apply relative inline-flex items-center px-4 py-2 text-sm font-medium;
  }

  .pagination span.page.current {
    @apply z-10 bg-indigo-50 border-indigo-500 text-indigo-700 relative inline-flex items-center px-4 py-2 border text-sm font-medium;
  }

  .pagination span.page a, .pagination span.next a, .pagination span.prev a, .pagination span.first a, .pagination span.last a {
    @apply bg-white border-gray-300 text-gray-600 hover:bg-gray-50 hover:text-indigo-600 relative inline-flex items-center px-4 py-2 border text-sm font-medium transition-colors duration-150;
  }

  .pagination .gap {
    @apply bg-white border-gray-300 text-gray-700 relative inline-flex items-center px-4 py-2 border text-sm font-medium;
  }

  /* Estilização especial para os botões de navegação */
  .pagination span.next a, .pagination span.prev a, .pagination span.first a, .pagination span.last a {
    @apply bg-gray-50;
  }

  /* Hover mais destacado */
  .pagination span.page a:hover, .pagination span.next a:hover, .pagination span.prev a:hover, .pagination span.first a:hover, .pagination span.last a:hover {
    @apply bg-indigo-50 border-indigo-200;
  }
</style>
<% end %>
