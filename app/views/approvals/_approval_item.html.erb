<!-- app/views/approvals/_approval_item.html.erb -->
<div class="p-6 border-b border-gray-200 last:border-b-0 hover:bg-gray-50 transition-colors duration-150">
  <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4">
    <div class="flex-grow">
      <div class="flex flex-col sm:flex-row sm:items-center gap-2 mb-3">
        <h3 class="text-lg font-semibold text-gray-900"><%= time_sheet.user.name %></h3>
        <span class="px-2.5 py-1 bg-indigo-50 text-indigo-700 text-xs rounded-md font-medium inline-flex items-center">
          <i class="fas fa-user-tag mr-1.5"></i>
          <%= time_sheet.user.position.present? ? time_sheet.user.position : "Sem função" %>
        </span>
      </div>

      <div class="flex flex-wrap items-center text-sm text-gray-600 mb-4 gap-y-2">
        <span class="mr-4 bg-gray-100 px-2.5 py-1 rounded-md inline-flex items-center">
          <i class="fas fa-building mr-1.5 text-gray-500"></i>
          <%= time_sheet.user.department.present? ? time_sheet.user.department : "Sem departamento" %>
        </span>
        <span class="mr-4 bg-gray-100 px-2.5 py-1 rounded-md inline-flex items-center">
          <i class="fas fa-calendar mr-1.5 text-gray-500"></i>
          <%= time_sheet.date.strftime('%d/%m/%Y') %>
        </span>

        <% request_type = determine_request_type(time_sheet) %>
        <span class="bg-indigo-100 text-indigo-800 px-2.5 py-1 rounded-md inline-flex items-center font-medium">
          <i class="fas <%= request_type == 'Horas Extras' ? 'fa-clock' : 'fa-calendar-alt' %> mr-1.5"></i>
          <%= request_type %>
        </span>
      </div>

      <div class="bg-gray-50 p-4 rounded-lg border border-gray-200 shadow-sm">
        <p class="text-gray-700">
          <span class="font-medium text-gray-900 block mb-1">Justificativa:</span> 
          <%= time_sheet.justification %>
        </p>
      </div>
    </div>

    <div class="flex flex-col items-end gap-3">
      <span class="inline-flex items-center px-3 py-1.5 rounded-md text-sm font-medium shadow-sm <%= status_badge_class(time_sheet.approval_status) %>">
        <% if time_sheet.approval_status == 'enviado' %>
          <i class="fas fa-clock mr-1.5"></i>
        <% elsif time_sheet.approval_status == 'aprovado' %>
          <i class="fas fa-check mr-1.5"></i>
        <% elsif time_sheet.approval_status == 'rejeitado' %>
          <i class="fas fa-times mr-1.5"></i>
        <% end %>
        <%= time_sheet.approval_status.capitalize %>
      </span>

      <% if time_sheet.approval_status == 'enviado' %>
        <div class="flex flex-col sm:flex-row gap-2 mt-2 w-full sm:w-auto">
          <%= button_to reject_approval_path(time_sheet), method: :patch, class: "inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 transition-colors duration-150 w-full sm:w-auto" do %>
            <i class="fas fa-times mr-2"></i> Rejeitar
          <% end %>

          <%= button_to approve_approval_path(time_sheet), method: :patch, class: "inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 transition-colors duration-150 w-full sm:w-auto" do %>
            <i class="fas fa-check mr-2"></i> Aprovar
          <% end %>
        </div>
      <% elsif time_sheet.approved_at.present? %>
        <div class="text-xs text-gray-500 mt-1 text-right">
          <div><i class="fas fa-user-check mr-1"></i> Por: <%= User.find_by(id: time_sheet.approved_by)&.name || "Usuário desconhecido" %></div>
          <div><i class="fas fa-clock mr-1"></i> Em: <%= time_sheet.approved_at.strftime('%d/%m/%Y %H:%M') %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
