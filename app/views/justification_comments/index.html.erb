<div class="container mx-auto px-4 py-6">
  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-bold text-gray-800">
        Discussão sobre Justificativa
      </h1>
      <%= link_to "Voltar", time_sheet_path(@time_sheet),
          class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md transition-colors duration-200" %>
    </div>

    <!-- Informações da Folha de Ponto -->
    <div class="bg-gray-50 rounded-lg p-4 mb-6">
      <h2 class="text-lg font-semibold text-gray-700 mb-2">Resumo do Dia</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <span class="text-sm text-gray-600">Data:</span>
          <p class="font-medium"><%= @time_sheet.date.strftime('%d/%m/%Y') %></p>
        </div>
        <div>
          <span class="text-sm text-gray-600">Horas Trabalhadas:</span>
          <p class="font-medium"><%= @time_sheet.total_hours %>h</p>
        </div>
        <div>
          <span class="text-sm text-gray-600">Status:</span>
          <p class="font-medium">
            <span class="px-2 py-1 rounded-full text-xs
              <%= @time_sheet.justification_status == 'pendente' ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %>">
              <%= @time_sheet.justification_status.humanize %>
            </span>
          </p>
        </div>
      </div>

      <% if @time_sheet.justification.present? %>
        <div class="mt-4">
          <span class="text-sm text-gray-600">Justificativa:</span>
          <p class="text-gray-800 bg-white p-3 rounded border mt-1"><%= @time_sheet.justification %></p>
        </div>
      <% end %>
    </div>

    <!-- Thread de Comentários -->
    <div class="space-y-4">
      <% if @comments.any? %>
        <h3 class="text-lg font-semibold text-gray-700">Discussão</h3>

        <% @comments.each do |comment| %>
          <div class="border rounded-lg p-4
            <%= comment.level == 1 ? 'bg-blue-50 border-blue-200' :
                comment.level == 2 ? 'bg-green-50 border-green-200 ml-8' :
                'bg-purple-50 border-purple-200' %>">

            <div class="flex justify-between items-start mb-2">
              <div class="flex items-center space-x-2">
                <span class="font-semibold text-gray-800"><%= comment.user.name %></span>
                <span class="text-sm text-gray-500">
                  (<%= comment.user.role == 'gestor' ? 'Gerente' : 'Funcionário' %>)
                </span>
                <span class="text-xs px-2 py-1 rounded-full
                  <%= comment.level == 1 ? 'bg-blue-100 text-blue-800' :
                      comment.level == 2 ? 'bg-green-100 text-green-800' :
                      'bg-purple-100 text-purple-800' %>">
                  <%= comment.level == 1 ? 'Comentário inicial' :
                      comment.level == 2 ? 'Réplica' : 'Tréplica' %>
                </span>
              </div>

              <div class="flex items-center space-x-2 text-xs text-gray-500">
                <span><%= comment.created_at.strftime('%d/%m/%Y às %H:%M') %></span>
                <% if can_delete_comment?(comment) %>
                  <%= link_to "Excluir",
                      time_sheet_justification_comment_path(@time_sheet, comment),
                      method: :delete,
                      data: { confirm: "Tem certeza que deseja excluir este comentário?" },
                      class: "text-red-600 hover:text-red-800 ml-2" %>
                <% end %>
              </div>
            </div>

            <div class="text-gray-700">
              <%= simple_format(comment.content) %>
            </div>
          </div>
        <% end %>

      <% else %>
        <div class="text-center py-8 text-gray-500">
          <p>Nenhum comentário ainda. Inicie a discussão!</p>
        </div>
      <% end %>

      <!-- Formulário para Novo Comentário -->
      <% if @time_sheet.can_comment? && @time_sheet.pending_comment_from?(current_user) %>
        <div class="bg-gray-50 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-gray-700 mb-4">
            <% case @time_sheet.next_comment_level %>
            <% when 1 %>
              Adicionar Comentário Inicial (Gerente)
            <% when 2 %>
              Adicionar Réplica (Funcionário)
            <% when 3 %>
              Adicionar Tréplica Final (Gerente)
            <% end %>
          </h3>

          <%= form_with model: [@time_sheet, @new_comment], local: true, class: "space-y-4" do |form| %>
            <% if @new_comment.errors.any? %>
              <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                <h4 class="text-red-800 font-semibold">Erro ao salvar comentário:</h4>
                <ul class="text-red-700 text-sm mt-2">
                  <% @new_comment.errors.full_messages.each do |message| %>
                    <li>• <%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div>
              <%= form.label :content, "Comentário", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_area :content,
                  rows: 4,
                  placeholder: "Digite seu comentário aqui (mínimo 10 caracteres, máximo 1000)...",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
            </div>

            <div class="flex space-x-3">
              <%= form.submit "Adicionar Comentário",
                  class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md transition-colors duration-200" %>
              <%= link_to "Cancelar", time_sheet_path(@time_sheet),
                  class: "bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-md transition-colors duration-200" %>
            </div>
          <% end %>
        </div>
      <% elsif @time_sheet.can_comment? %>
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <p class="text-yellow-800">
            <% case @time_sheet.next_comment_level %>
            <% when 1 %>
              Aguardando comentário inicial do gerente.
            <% when 2 %>
              Aguardando réplica do funcionário.
            <% when 3 %>
              Aguardando tréplica final do gerente.
            <% end %>
          </p>
        </div>
      <% else %>
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
          <p class="text-gray-600">
            Comentários não são permitidos no status atual desta justificativa.
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :page_helpers do %>
  <%
    def can_delete_comment?(comment)
      return false unless comment.user == current_user
      return false if comment.replies.any?
      comment.created_at > 24.hours.ago
    end
  %>
<% end %>